{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "platform": "github",
  "endpoint": "https://github.com/freiheit-com/kuberpult",
  "repositories": [
    "freiheit-com/kuberpult"
  ],
  "ignorePaths": [
    ".github/**"
  ],
  "packageRules": [
    {
      "description": "Separate Major and Minor versions' PRs for packages in go.mod",
      "matchPaths": [
        "go.mod"
      ],
      "separateMajorMinor": "true",
      "excludePackagePatterns": [
        "github.com/freiheit-com/kuberpult/.*"
      ]
    }
  ],
  "constraints": {
    "go": "1.19.5"
  },
  "prHourlyLimit": 0,
  "labels": [
    "renovate"
  ],
  "postUpdateOptions": [
    "gomodUpdateImportPaths",
    "gomodTidy"
  ],
  "rebaseWhen": "behind-base-branch",
  "schedule": [
    "before 12pm on Tuesday",
    "before 12pm on Friday"
  ]
}
